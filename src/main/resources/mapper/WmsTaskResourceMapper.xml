<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supos.app.mapper.WmsTaskResourceMapper">

    <resultMap id="BaseResultMap" type="com.supos.app.entity.WmsTaskResource">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="task_id" column="task_id" jdbcType="BIGINT"/>
            <result property="resource_id" column="resource_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,task_id,resource_id
    </sql>
    <insert id="insertAll" useGeneratedKeys="true" keyProperty="id">
        insert into wms_taskResource (task_id, resource_id)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.task_id,jdbcType=BIGINT}, #{item.resource_id,jdbcType=BIGINT})
        </foreach>
    </insert>
    <select id="selectAll" resultMap="BaseResultMap">.
        select
        <include refid="Base_Column_List"/>
        from wms_taskResource
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="task_id != null">
                AND task_id = #{task_id}
            </if>
            <if test="resource_id != null">
                AND resource_id = #{resource_id}
            </if>
        </where>
    </select>
    <update id="updateSelective">
        update wms_taskResource
        <set>
            <if test="task_id != null">task_id=#{task_id,jdbcType=BIGINT},</if>
            <if test="resource_id != null">resource_id=#{resource_id,jdbcType=BIGINT},</if>
        </set>
        where id = #{id,jdbcType=NUMERIC}
    </update>
    <delete id="deleteWmsTaskResourceById" parameterType="com.supos.app.entity.WmsTaskResource">
        DELETE FROM wms_taskResource WHERE id = #{id}
    </delete>
    <delete id="deleteWmsTaskResourceByTaskId" parameterType="com.supos.app.entity.WmsTaskResource">
        DELETE FROM wms_taskResource WHERE task_id = #{task_id}
    </delete>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.supos.app.mapper.WmsThreedWarehouseMapper">

    <resultMap id="BaseResultMap" type="com.supos.app.entity.WmsThreedWarehouse">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="location_id" column="location_id" jdbcType="BIGINT"/>
            <result property="location_name" column="location_name" jdbcType="VARCHAR"/>
            <result property="material_name" column="material_name" jdbcType="VARCHAR"/>
            <result property="del_flag" column="del_flag" jdbcType="TINYINT"/>
            <result property="update_time" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="create_time" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,location_id,location_name,
        material_name,del_flag,update_time,
        create_time
    </sql>
    <update id="updateSelectiveByLocationId">
        update wms_threed_warehouse
        <set>
            <if test="location_id != null">location_id=#{location_id,jdbcType=NUMERIC},</if>
            <if test="location_name != null">location_name=#{location_name,jdbcType=VARCHAR},</if>
            material_name=#{material_name,jdbcType=VARCHAR},
            <if test="del_flag != null">del_flag=#{del_flag,jdbcType=NUMERIC},</if>
            <if test="update_time != null">update_time=#{update_time,jdbcType=TIMESTAMP},</if>
            <if test="create_time != null">create_time=#{create_time,jdbcType=TIMESTAMP},</if>
        </set>
        where location_id = #{location_id,jdbcType=NUMERIC}
    </update>
    <select id="selectAllStocked" resultMap="BaseResultMap">
        SELECT * FROM wms_threed_warehouse where del_flag IS NULL and material_name IS NOT NULL
    </select>
</mapper>
